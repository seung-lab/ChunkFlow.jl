{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true
    },
    "compileOnSave": true,
    "include": [
        "./src/**/*"
    ],
    "exclude":[
        "**/node_modules/*"
    ],
    "files":[
        "main.ts",
        "typings.d.ts"
    ],
    "filesGlob":[
        "main.ts",
        "typings.d.ts",
        "src/**/*.ts"
    ]
}
