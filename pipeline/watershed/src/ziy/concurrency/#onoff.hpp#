#ifndef ZI_CONCURRENCY_ONOFF_HPP
#define ZI_CONCURRENCY_ONOFF_HPP 1

#include <zi/concurrency/config.hpp>
#include <zi/concurrency/mutex.hpp>
#include <zi/concurrency/condition_variable.hpp>

#include <zi/utility/non_copyable.hpp>
#include <zi/utility/assert.hpp>

namespace zi {
namespace concurrency_ {

class onoff: non_copyable
{
private:
    mutable bool       on_;
    condition_variable cv_;
    mutex              m_ ;

public:

    explicit state( bool on = false )
        : on_( on ), cv_(), m_()
    {
    }

    void on() const
    {
        mutex::guard g( m_ );
        if ( state_ != s )
        {
            state_ = s;
            cv_.notify_all();
        }
    }

    void wait_for( state_type s ) const
    {
        mutex::guard g( m_ );
        while ( state_ != s )
        {
            cv_.wait( m_ );
        }
    }

    state_type operator() () const
    {
        mutex::guard g( m_ );
        return state_;
    }

    state_type get_state() const
    {
        mutex::guard g( m_ );
        return state_;
    }

};



} // namespace concurrency_

using concurrency_::state;

} // namespace zi


#endif
