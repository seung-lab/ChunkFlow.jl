{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "allowJs": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2015",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "compileOnSave": true,
    "include": [
        "./src/**/*"
    ],
    "exclude":[
        "**/node_modules/*"
    ],
    "files":[
        "main.ts",
        "typings.d.ts"
    ],
    "filesGlob":[
        "main.ts",
        "typings.d.ts",
        "src/**/*.ts"
    ]
}
